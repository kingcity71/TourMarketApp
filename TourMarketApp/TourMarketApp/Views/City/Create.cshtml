@using TourMarket.Entities;
@model City
@{
    var countries = (List<Country>)ViewBag.Countries;
    var dropDownListItems = countries.Select(x => new SelectListItem() {Text=x.Name, Value=x.Id.ToString() }).ToList();
    ViewData["Title"] = "Create";
}
<style>
    .text-right{text-align:right}
    body {
        background: yellowgreen;
    }
    .edit-form {
        margin: 10px 0;
        border: 1px solid lightgray;
        padding: 10px;
        border-radius: 5px;
        background: antiquewhite;
        color: black;
    }
    .edit-form-line > div{
        margin:10px 0;
    }
    .edit-form-header{
        text-align:center;
        font-size:20px;
    }
    .edit-form-save-btn > btn {
        border: 1px solid black;
        border-radius: 4px;
        background: white;
    }
</style>
<form method="post" autocomplete="off">
    <div class="edit-form col-xs-10 col-xs-offset-1">
        <div class="edit-form-line">
            <div class="col-xs-10 col-xs-offset-2 edit-form-header">
                Добавить город
            </div>
            <div class="col-xs-2 edit-form-save-btn">
                <button type="submit">Сохранить</button>
            </div>
        </div>

        <div class="edit-form-line">
            <div class="col-xs-4 col-xs-offset-1 text-right">
                Название
            </div>
            <div class="col-xs-6 col-xs-offset">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="edit-form-line">
            <div class="col-xs-4 col-xs-offset-1 text-right">
                Страна
            </div>
            <div class="col-xs-6 col-xs-offset">
                @Html.DropDownListFor(m => m.Country.Id, dropDownListItems, new { @class = "form-control" })
                @*@Html.DropDownList("Выберите",dropDownListItems)*@
            </div>
        </div>
    </div>
</form>