@using TourMarket.Entities;
@model Hotel
@{
    var cities = (List<City>)ViewBag.Cities;
    var dropDownListCitites = cities.Select(x => new SelectListItem() { Text = $"{x.Country.Name}, {x.Name}", Value = x.Id.ToString() }).ToList();
    var dropDownListStars = Enumerable.Range(1, 5).Select(x => new SelectListItem() { Text = x.ToString(), Value = x.ToString() }).ToList();
    ViewData["Title"] = "Create";
}
<style>
    .text-right {
        text-align: right
    }

    body {
        background: yellowgreen;
    }

    .edit-form {
        margin: 10px 0;
        border: 1px solid lightgray;
        padding: 10px;
        border-radius: 5px;
        background: antiquewhite;
        color: black;
    }

    .edit-form-line > div {
        margin: 10px 0;
    }

    .edit-form-header {
        text-align: center;
        font-size: 20px;
    }

    .edit-form-save-btn > btn {
        border: 1px solid black;
        border-radius: 4px;
        background: white;
    }
</style>
<form method="post" autocomplete="off">
    @Html.HiddenFor(x=>x.Id)
    <div class="edit-form col-xs-10 col-xs-offset-1">
        <div class="edit-form-line">
            <div class="col-xs-10 col-xs-offset-2 edit-form-header">
                Реадактировать отель
            </div>
            <div class="col-xs-2 edit-form-save-btn">
                <button type="submit">Сохранить</button>
            </div>
        </div>
        <div class="edit-form-line">
            <div class="col-xs-4 col-xs-offset-1 text-right">
                Название
            </div>
            <div class="col-xs-6 col-xs-offset">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>

        <div class="edit-form-line">
            <div class="col-xs-4 col-xs-offset-1 text-right">
                Город
            </div>
            <div class="col-xs-6 col-xs-offset">
                @Html.DropDownListFor(m => m.City.Id, dropDownListCitites, new { @class = "form-control" })
            </div>
        </div>

        <div class="edit-form-line">
            <div class="col-xs-4 col-xs-offset-1 text-right">
                Кол-во звезд
            </div>
            <div class="col-xs-6 col-xs-offset">
                @Html.DropDownListFor(m => m.Stars, dropDownListStars, new { @class = "form-control" })
            </div>
        </div>

        <div class="edit-form-line">
            <div class="col-xs-4 col-xs-offset-1 text-right">
                Описание
            </div>
            <div class="col-xs-6 col-xs-offset">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
            </div>
        </div>
    </div>
</form>