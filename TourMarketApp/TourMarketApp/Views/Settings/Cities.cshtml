@model List<TourMarket.Entities.City>
@{
    ViewData["Title"] = "Cities";
}
<div class="edit-form col-xs-12 col-xs-offset-2">
    <div class="edit-form-line">
        <div class="col-xs-10 edit-form-header">
            Список городов
        </div>
        <div class="col-xs-2">
            <a href="/city/create/">Добавить</a>
        </div>
    </div>

    @foreach (var city in Model)
    {
        <div class="edit-form-line">
            <div class="col-xs-6 col-xs-offset-1 text-right">
                @($"{city.Country.Name}, {city.Name}")
            </div>
            <div class="col-xs-6 col-xs-offset-1 text-left">
                <a href="/city/edit?cityId=@city.Id">Редактировать</a>
            </div>
        </div>
    }
</div>
